#include<stdio.h>
#include<string.h>
int main()
{
    char ch[100];
    printf("Enter the string: ");
    gets(ch);
    char temp[4][50] = {"int", "if", "while", "return"};
    int check = 0;

    //check if it is a keyword
    for( int i = 0; i < 4; i++ ){
            int n = 0;
        for( int j = 0; temp[i][j] != '\0' || ch[n] != '\0'; j++, n++ ){
            if( temp[i][j] == ch[n] ){
                check = -1;
            }
            else{
                check = 1;
                break;
            }
        }
        if( check == -1 ){
            printf("\"%s\" is not a valid identifier", ch);
            return 0;
        }
        else{
            check = 0;
        }
    }

    int i = 0, valid = 0;

    if( (ch[0] == '_') || (ch[0] >= 'a' &&  ch[0] <= 'z') || (ch[0] >= 'A' &&  ch[0] <= 'Z') ){
        i++;
        while( ch[i] != '\0' ){
            if( (ch[i] == '_') || (ch[i] >= 'a' &&  ch[i] <= 'z') || (ch[i] >= 'A' &&  ch[i] <= 'Z') || (ch[i] >='0' && ch[i] <= '9') ){
                valid = 1;
            }
            else{

        printf("%s is not a valid identifier.", ch);
                  return 0;
              
            }
            i++;
        }
    }

    if( valid == 1 ){
        printf("%s is a valid identifier.", ch);

    }
    


}



